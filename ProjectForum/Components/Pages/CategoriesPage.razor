@page "/categories"
@using ProjectForum.Models
@inject NavigationManager Navigation

<h3>Categories</h3>
<br>
<div class="categories-menu">
    <button class="btn btn-dark" @onclick="() => NavigateToCategory(Category.Sport)"><i>Sport</i></button>
    <button class="btn btn-light" @onclick="() => NavigateToCategory(Category.Economy)"><i>Economy</i></button>
    <button class="btn btn-dark" @onclick="() => NavigateToCategory(Category.Science)"><i>Science</i></button>
    <button class="btn btn-light" @onclick="() => NavigateToCategory(Category.FoodAndDrinks)"><i>Food & Drinks</i></button>
    <button class="btn btn-dark" @onclick="() => NavigateToCategory(Category.Other)"><i>Other</i></button>
</div>

@code {
    private void NavigateToCategory(Category category)
    {
        Navigation.NavigateTo($"/forum/{category}");
    }
}

